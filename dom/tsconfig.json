{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "declarationMap": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "declaration": false,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
