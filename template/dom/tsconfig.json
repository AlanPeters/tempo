{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es6", "es7"],
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "removeComments": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "web/webpack.config.ts",
    "**/*.spec.ts",
    "**/build",
    "**/lib",
    "**/test"
  ]
}
