{
  "name": "mood",
  "main": "lib",
  "license": "Apache-2.0",
  "homepage": "https://github.com/fponticelli/mood",
  "bugs": {
    "url": "https://github.com/fponticelli/mood/issues"
  },
  "author": {
    "name": "Franco Ponticelli",
    "email": "franco.ponticelli@gmail.com",
    "url": "https://github.com/fponticelli"
  },
  "description": "ui framework for TypeScript",
  "keywords": [
    "typescript",
    "ui",
    "dom",
    "mood architecture"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "23.3.5",
    "@types/jsdom": "^12.2.0",
    "@types/node": "10.12.0",
    "jest": "23.6.0",
    "jsdom": "^13.0.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typedoc": "0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "^3.2.2"
  },
  "directories": {
    "doc": "docs",
    "lib": "src",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fponticelli/mood.git"
  },
  "scripts": {
    "build": "rm -rf lib && tsc && cp package.npm.json lib/package.json && cp {*.md,LICENSE} lib/",
    "docs": "rm -rf docs && typedoc --options typedoc.js ./src",
    "serve-doc": "rm -rf docs && compodoc src -s",
    "lint": "tslint --fix --project .",
    "fix-lint": "tslint --fix \"./{src,test}/**/*.ts\"",
    "prettier": "prettier --list-different \"./{src,test}/**/*.ts\"",
    "fix-prettier": "prettier --write \"./{src,test}/**/*.ts\"",
    "prep": "yarn test-coverage && yarn lint && yarn prettier && yarn build && yarn docs",
    "test": "jest",
    "jest-clear-cache": "jest --clearCache",
    "test-coverage": "jest --coverage",
    "watch": "jest --watch --coverage",
    "npm-publish": "yarn prep && ( cd lib && yarn publish --access public )"
  },
  "eslint.packageManager": "yarn",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/dom/els/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
