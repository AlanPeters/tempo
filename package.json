{
  "private": true,
  "scripts": {

  },
  "devDependencies": {
    "@types/jest": "23.3.12",
    "jest": "23.6.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "tslint": "5.15.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/*.spec.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/src/*.{ts,tsx,js}"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
