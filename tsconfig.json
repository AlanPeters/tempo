{
  "compilerOptions": {
    "module": "commonjs",
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": ".",

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,

    "paths": {
      "@mood/core/*": ["./packages/core/*"],
      "@mood/dom/*": ["./packages/dom/*"]
    }
  },
  "exclude": [
    "node_modules",
    "web/webpack.config.ts",
    "**/build",
    "**/lib",
    "**/test"
  ]
}
