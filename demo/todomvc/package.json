{
  "name": "tempo-demo.todomvc",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "dependencies": {
    "tempo-core": "1.0.1",
    "tempo-dom": "0.8.3",
    "tempo-store": "1.0.1",
    "todomvc-app-css": "2.2.0",
    "todomvc-common": "1.0.5"
  },
  "devDependencies": {
    "parcel-bundler": "1.12.4",
    "typescript": "3.7.2",
    "tslint": "5.20.1",
    "prettier": "1.19.1",
    "cssnano": "4.1.10",
    "babel-types": "6.26.0"
  },
  "scripts": {
    "compile": "NODE_ENV=production && parcel build src/index.html --public-url . --out-dir ../../docs/demo/todomvc --experimental-scope-hoisting --no-minify",
    "clean": "rm -rf dist/* && rm -rf ../../docs/demo/todomvc/*",
    "build": "npm run clean && npm run compile",
    "watch": "parcel src/index.html",
    "tslint": "tslint -p ./tslint.json",
    "prettier": "prettier -c src/**/*.ts",
    "prettier-fix": "prettier --write src/**/*.ts"
  }
}
